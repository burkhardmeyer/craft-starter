{
  "name": "burkhardmeyer/craft-starter",
  "description": "Craft 3 CMS boilerplate project",
  "keywords": [
    "craft",
    "cms",
    "craftcms",
    "project"
  ],
  "license": "MIT",
  "homepage": "https://craftcms.com/",
  "type": "project",
  "support": {
    "email": "info@burkhardmeyer.com",
    "issues": "https://github.com/burkhardmeyer/craft-starter/issues",
    "source": "https://github.com/burkhardmeyer/craft-starter",
    "docs": "https://github.com/burkhardmeyer/craft-starter"
  },
  "minimum-stability": "RC",
  "require": {
    "craftcms/cms": "3.0.0-RC15",
    "nystudio107/craft-cookies": "1.1.9",
    "nystudio107/craft-imageoptimize": "1.4.23",
    "nystudio107/craft-minify": "1.2.8",
    "nystudio107/craft-scripts": "^1.2.4",
    "nystudio107/craft-typogrify": "1.1.8",
    "nystudio107/craft3-multi-environment": "^1.0.5",
    "ostark/craft-async-queue": "dev-master",
    "vlucas/phpdotenv": "^2.4.0",
    "yiisoft/yii2-redis": "^2.0.6"
  },
  "autoload": {
    "psr-4": {
      "modules\\sitemodule\\": "modules/sitemodule/src/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "php": "7.0"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php craft setup/welcome",
      "@php bmeyer-setup welcome"
    ],
    "post-update-cmd": [
      "@php bmeyer-setup update"
    ],
    "post-install-cmd": [
      "@php bmeyer-setup update"
    ]
  }
}
