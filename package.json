{
    "name": "burkhardmeyer",
    "version": "1.0.0",
    "description": "Website for burkhardmeyer.com",
    "main": "gulpfile.js",
    "author": "Burkhard Meyer, mail@burkhardmeyer.com>",
    "copyright": "burkhardmeyer",
    "license": "UNLICENSED",
    "private": true,
    "paths": {
        "src": {
            "base": "./src/",
            "css": "./src/css/",
            "fontello": "./src/fontello/",
            "fonts": "./src/fonts/",
            "img": "./src/img/",
            "json": "./src/json/",
            "js": "./src/js/",
            "scss": "./src/scss/"
        },
        "dist": {
            "base": "./web/",
            "css": "./web/css/",
            "js": "./web/js/",
            "fonts": "./web/fonts/",
            "img": "./web/img/"
        },
        "build": {
            "base": "./build/",
            "css": "./build/css/",
            "fontello": "./build/fonts/fontello/",
            "fonts": "./build/fonts/",
            "js": "./build/js/",
            "html": "./build/html/",
            "img": "./build/img/"
        },
        "favicon": {
            "src": "./src/img/favicon_src.png",
            "dest": "./web/img/site/",
            "path": "/img/site/"
        },
        "tailwindcss": {
            "src": "./src/scss/style.scss",
            "conf": "./tailwind.js"
        },
        "scss": [],
        "craftConfig": "./config/",
        "templates": "./templates/"
    },
    "urls": {
        "live": "https://burkhardmeyer.com/",
        "local": "https://craft-starter.local/",
        "critical": "https://burkhardmeyer.com/"
    },
    "vars": {
        "siteCssName": "site.combined.min.css",
        "scssName": "style.scss",
        "cssName": "style.css"
    },
    "globs": {
        "distCss": [
            "./build/fonts/fontello/css/fontello-codes.css",
            "./build/css/*.css"
        ],
        "img": [
            "./web/img/"
        ],
        "components": [],
        "fonts": [
            "./build/fonts/fontello/font/*.{eot,ttf,woff,woff2}",
            "./src/fonts/*.{eot,ttf,woff,woff2}"
        ],
        "purgecss": [
            "./templates/**/*.{html,twig}"
        ],
        "purgecssWhitelist": [],
        "critical": [
            {
                "url": "",
                "template": "index"
            },
            {
                "url": "offline",
                "template": "offline"
            },
            {
                "url": "404",
                "template": "404"
            }
        ],
        "criticalWhitelist": [],
        "download": [
            {
                "url": "https://www.google-analytics.com/analytics.js",
                "dest": "./web/js/"
            }
        ],
        "distJs": [
            "./build/js/*.js",
            "./node_modules/lazysizes/lazysizes.min.js",
            "./node_modules/lazysizes/plugins/bgset/ls.bgset.min.js",
            "./node_modules/picturefill/dist/picturefill.min.js",
            "./node_modules/jquery/dist/jquery.min.js"
        ],
        "babelJs": [
            "./src/js/*.js"
        ],
        "inlineJs": [
            "./node_modules/fg-loadcss/src/loadCSS.js",
            "./node_modules/fg-loadcss/src/cssrelpreload.js",
            "./node_modules/fontfaceobserver/fontfaceobserver.js",
            "./node_modules/loadjs/dist/loadjs.min.js",
            "./src/js/modernizr.js",
            "./src/js/register-service-worker.js",
            "./src/js/asyncload-site-fonts.js"
        ],
        "siteIcon": "./web/img/site/favicon.*"
    },
    "dependencies": {
        "fg-loadcss": "^2.0.1",
        "fontfaceobserver": "^2.0.5",
        "jquery": "^3.3.1",
        "lazysizes": "^4.0.1",
        "loadjs": "^3.3.1",
        "normalize.css": "^8.0.0",
        "picturefill": "^3.0.2"
    },
    "devDependencies": {
        "babel-core": "^6.26.0",
        "babel-plugin-transform-runtime": "^6.15.0",
        "babel-preset-env": "^1.6.1",
        "babel-preset-es2015": "^6.16.0",
        "browser-sync": "^2.23.6",
        "chalk": "^2.3.2",
        "critical": "^1.1.0",
        "fancy-log": "^1.2.0",
        "git-rev-sync": "^1.7.1",
        "gulp": "^3.9.1",
        "gulp-autoprefixer": "^5.0.0",
        "gulp-babel": "^7.0.1",
        "gulp-cached": "^1.1.1",
        "gulp-concat": "^2.6.0",
        "gulp-cssnano": "^2.1.2",
        "gulp-debug": "^3.2.0",
        "gulp-download": "^0.0.1",
        "gulp-favicons": "^2.2.6",
        "gulp-filter": "^5.0.1",
        "gulp-flatten": "^0.4.0",
        "gulp-fontello": "^0.4.6",
        "gulp-header": "^2.0.1",
        "gulp-if": "^2.0.1",
        "gulp-imagemin": "^4.1.0",
        "gulp-livereload": "^3.8.1",
        "gulp-load-plugins": "^1.3.0",
        "gulp-newer": "^1.2.0",
        "gulp-plumber": "^1.1.0",
        "gulp-postcss": "^7.0.0",
        "gulp-print": "^3.0.0",
        "gulp-purgecss": "^0.20.0",
        "gulp-rename": "^1.2.2",
        "gulp-replace": "0.6.1",
        "gulp-rev": "^8.1.1",
        "gulp-sass": "^3.1.0",
        "gulp-size": "^3.0.0",
        "gulp-sourcemaps": "^2.2.1",
        "gulp-streamify": "1.0.2",
        "gulp-uglify": "^3.0.0",
        "moment": "^2.21.0",
        "pa11y": "^5.0.1",
        "tailwindcss": "^0.5.1",
        "vinyl-source-stream": "^2.0.0"
    },
    "scripts": {
        "start": "gulp",
        "build": "gulp build"
    },
    "bugs": {
        "email": "info@burkhardmeyer.com"
    }
}
